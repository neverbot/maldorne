<div class="container">
    <%# toc %>
    <% if (theme.page_toc_enable && toc(page.content).length!==0) { %>
        <%- partial('_partial/toc') %>
    <% } %>

    <article class="post-wrap page">
        <% if(theme.page_title_enable) { %>
        <h2 class="post-title"><%- page.title %></h2>
        <% } %>
        <section class="post-content">
            <%#- list_categories(site.categories, {depth: 1}) %>
            <%- list_tags(site.tags, { class: 'taxonomy', 
                                       style: false, 
                                       separator: ' | ' }) %>
        </section>
    </article>
</div>