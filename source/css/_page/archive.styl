.post-wrap
  position relative
  width 100%
  max-width 780px
  margin 0 auto
  padding-top 2rem
  padding-bottom 1rem

  .archive-item
    margin-left 2rem

.archive-item-link
    display inline-block
    text-decoration none
    overflow hidden
    //text-overflow ellipsis
    white-space nowrap
    &:hover
      color $light-global-link-hover-color
      background-color transparent
    
  .archive-item-date
    float right
    text-align right
    color $light-font-secondary-color
