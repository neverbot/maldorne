.post-nav 
  margin 20px 0 0 0 

  &:before,
  &:after 
    content " "
    display table
  
  & a.prev,
  & a.next 
    color: $light-post-footer-color
    transition-property: transform
    transition-timing-function: ease-out
    transition-duration: 0.3s
  
  & a.prev 
    float: left
  
  & a.prev::before 
    content "<"
    margin-right .5em
  
  & a.prev:hover 
    transform: translateX(-4px)
    color: $light-post-link-hover-color
  
  & a.next 
    float: right
  
  & a.next::after 
    content ">"
    margin-left .5em
  
  & a.next:hover 
    transform: translateX(4px)
    color: $light-post-link-hover-color
    text-decoration none
  
  & a.prev::before,
  & a.next::after
    font-weight bold
